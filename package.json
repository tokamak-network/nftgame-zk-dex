{
  "name": "nftgame-zk-dex",
  "version": "0.1.0",
  "description": "ZK-powered NFT Gaming DEX - Private NFT transfers, item trading, and card games",
  "private": true,
  "scripts": {
    "compile:circuits": "node scripts/compile-circuit.js",
    "compile:contracts": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:circuits": "node --experimental-vm-modules node_modules/.bin/mocha test/circuits/ --timeout 120000",
    "dev:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "node:local": "npx hardhat node",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost"
  },
  "dependencies": {
    "circomlibjs": "^0.1.7",
    "ethers": "^6.11.1",
    "ffjavascript": "^0.3.1",
    "snarkjs": "^0.7.6"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "hardhat": "^2.22.0",
    "chai": "^4.3.0",
    "mocha": "^10.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
